<header>
  <h1>Your Settings</h1>
</header>

<%= form_with(model: @user, url: update_settings_user_path(@user), method: :patch, local: true) do |form| %>
  <% if @user.errors.any? %>
    <aside>
      <h3><%= pluralize(@user.errors.count, "error") %> prevented your settings from being changed:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </aside>
  <% end %>

  <%= form.label :time_display, "Time Display Format" %>
  <%= form.select :time_display, [["Show Full Time", "time"], ["Show Day Only", "day"]] %>

  <%= form.submit "Update Settings" %>
<% end %>

<div class="margins center">
  <%= link_to change_password_user_path(current_user) do %>
    <strong>Change Password</strong>
  <% end %>
</div>

